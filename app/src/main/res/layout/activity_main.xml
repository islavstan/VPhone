<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.islavdroid.vphone.MainActivity">

    <at.markushi.ui.CircleButton
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/button_call"
        app:cb_color="@color/colorPrimary"
        android:src="@drawable/ic_call_white_24dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:cb_pressedRingWidth="8dip" />


    <Button
        android:text="0"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_call"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:background="?attr/selectableItemBackground"
        android:id="@+id/button_0"
        android:textSize="28sp" />

    <Button
        android:text="8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_0"
        android:textSize="28sp"

        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:background="?attr/selectableItemBackground"
        android:id="@+id/button_8" />
    <Button
        android:text="5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_8"
        android:textSize="28sp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:background="?attr/selectableItemBackground"
        android:id="@+id/button_5" />


    <RelativeLayout
        android:id="@+id/divider"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="@color/colorPrimary"

        android:layout_above="@+id/button_2" />

    <Button
        android:text="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_5"
        android:background="?attr/selectableItemBackground"
        android:textSize="28sp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:id="@+id/button_2" />

    <Button
        android:text="#"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"

        android:id="@+id/button_grid"
        android:textSize="28sp"
        android:layout_alignBaseline="@+id/button_0"
        android:layout_alignBottom="@+id/button_0"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp" />


    <Button
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"

        android:id="@+id/button_1"
        android:textSize="28sp"
        android:layout_alignBaseline="@+id/button_2"
        android:layout_alignBottom="@+id/button_2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp" />

    <at.markushi.ui.CircleButton

        android:layout_width="65dp"
        android:layout_height="65dp"
        app:cb_color="#FDC307"
        app:cb_pressedRingWidth="8dip"
        android:id="@+id/button_back"
        android:src="@drawable/ic_dialpad_white_24dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/button_grid"
        android:layout_alignEnd="@+id/button_grid"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp" />

    <Button
        android:text="3"
        android:textSize="28sp"
        android:background="?attr/selectableItemBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button_2"
        android:layout_alignLeft="@+id/button_6"
        android:layout_alignStart="@+id/button_6"
        android:id="@+id/button_3" />



    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_above="@+id/button_3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/imageButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:textSize="10dp"
        android:layout_alignBottom="@+id/button_0"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="*"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:id="@+id/button_star"
        android:textSize="30sp"
        android:textAllCaps="false"
        android:layout_below="@+id/button_8"
        android:layout_alignLeft="@+id/button_7"
        android:layout_alignStart="@+id/button_7" />

    <TextView
        android:text="TUV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:layout_alignBottom="@+id/button_8"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView3" />

    <TextView
        android:text="JKL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:layout_alignBottom="@+id/button_5"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView4" />

    <TextView
        android:text="ABC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:layout_alignBottom="@+id/button_2"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView5" />

    <Button
        android:text="6"
        android:textSize="28sp"
        android:background="?attr/selectableItemBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_6"
        android:layout_alignBaseline="@+id/button_5"
        android:layout_alignBottom="@+id/button_5"
        android:layout_alignLeft="@+id/button_9"
        android:layout_alignStart="@+id/button_9" />

    <TextView
        android:text="DEF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/textView2"
        android:textSize="10dp"

        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:layout_alignBottom="@+id/button_3"
        android:layout_alignLeft="@+id/button_back"
        android:layout_alignStart="@+id/button_back" />

    <TextView
        android:text="MNO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="10dp"
        android:layout_alignBottom="@+id/button_6"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <Button
        android:text="9"
        android:textSize="28sp"
        android:background="?attr/selectableItemBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_9"
        android:layout_alignBaseline="@+id/button_8"
        android:layout_alignBottom="@+id/button_8"
        android:layout_alignLeft="@+id/button_grid"
        android:layout_alignStart="@+id/button_grid" />

    <TextView
        android:text="WXYZ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:textSize="10dp"
        android:layout_alignBottom="@+id/button_9"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />


    <TextView
        android:text="GHI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:textSize="10dp"
        android:layout_marginRight="23dp"
        android:layout_marginEnd="23dp"
        android:layout_alignBottom="@+id/button_4"
        android:layout_alignRight="@+id/button_add"
        android:layout_alignEnd="@+id/button_add" />

    <TextView
        android:text="PQRS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"

        android:textSize="10dp"

        android:layout_alignBottom="@+id/button_7"
        />

    <Button
        android:text="4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"

        android:id="@+id/button_4"
        android:textSize="28sp"
        android:layout_alignBaseline="@+id/button_5"
        android:layout_alignBottom="@+id/button_5"
        android:layout_alignLeft="@+id/button_1"
        android:layout_alignStart="@+id/button_1" />

    <Button
        android:text="7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"

        android:id="@+id/button_7"
        android:textSize="28sp"
        android:layout_alignBaseline="@+id/button_8"
        android:layout_alignBottom="@+id/button_8"
        android:layout_alignLeft="@+id/button_4"
        android:layout_alignStart="@+id/button_4" />

    <at.markushi.ui.CircleButton

        android:layout_width="65dp"
        android:layout_height="65dp"
        app:cb_color="#FDC307"
        app:cb_pressedRingWidth="8dip"
        android:id="@+id/button_add"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:src="@drawable/ic_person_add_white_24dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/textView10"
        android:layout_toEndOf="@+id/textView10" />


</RelativeLayout>
