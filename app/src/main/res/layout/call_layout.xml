<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@color/colorPrimary">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_profile_photo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            app:civ_border_width="2dp"
            app:civ_border_color="#FFFFFF"
            android:padding="20dp"
            android:src="@drawable/a" />
        <TextView
            android:id="@+id/user_profile_name"
            android:layout_below="@+id/user_profile_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Василий Петров"
            android:textColor="#fff"
            android:textSize="24sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/user_profile_short_bio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_profile_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="+3000.3329333"
            android:textColor="#fff"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_profile_short_bio"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="ВЫЗОВ"
            android:textColor="#fff"
            android:textSize="16sp" />

    </RelativeLayout>


        <GridLayout
            android:layout_marginTop="50dp"
            android:id="@+id/grid_layout_keypad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:columnCount="3"
            android:foregroundGravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:rowCount="3"
            android:rowOrderPreserved="false"

            android:textAlignment="center"
           >

            <RelativeLayout
                android:layout_width="wrap_content"
                     android:layout_marginRight="65dp"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/camera"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:background="?selectableItemBackgroundBorderless"
                    android:src="@drawable/camera"
                    android:tint="#9E9E9E"

                    android:scaleType="centerCrop"/>

                <TextView
                    android:text="видео"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:textColor="#9E9E9E"
                    android:layout_below="@+id/camera"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/text_camera"
                    />

            </RelativeLayout>
            <RelativeLayout

                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <ImageButton
                    android:id="@+id/dialpad"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                      android:layout_centerHorizontal="true"
                    android:background="?selectableItemBackgroundBorderless"
                    android:src="@drawable/key"
                    android:tint="#9E9E9E"

                    android:scaleType="centerCrop"/>

                <TextView
                    android:text="клавиатура"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:textColor="#9E9E9E"
                    android:layout_below="@+id/dialpad"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/text_keyboard" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginLeft="65dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/add"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="?selectableItemBackgroundBorderless"
                    android:src="@drawable/plus1"
                    android:tint="#9E9E9E"
                    android:layout_centerHorizontal="true"
                    android:scaleType="centerCrop"/>

                <TextView

                    android:id="@+id/text_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/add"
                    android:layout_centerHorizontal="true"
                    android:text="добавить"
                    android:textColor="#9E9E9E"
                    android:textSize="12dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginRight="65dp"
                android:layout_marginTop="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_speaker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/speaker"
                    android:layout_centerHorizontal="true"
                    android:textColor="#9E9E9E"
                    android:text="динамик"
                    android:textSize="12dp" />

                <ImageButton
                    android:id="@+id/speaker"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="?selectableItemBackgroundBorderless"
                    android:src="@drawable/speaker2"
                    android:tint="#9E9E9E"
                    android:scaleType="centerCrop"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/pause"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:background="?selectableItemBackgroundBorderless"
                    android:src="@drawable/pause1"
                    android:tint="#9E9E9E"

                    android:scaleType="centerCrop"/>
                <TextView
                    android:id="@+id/text_wait"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pause"
                    android:layout_centerHorizontal="true"
                    android:textColor="#9E9E9E"
                    android:text="удержание"
                    android:textSize="12dp" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/mute_layout"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="65dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/mute"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="?selectableItemBackgroundBorderless"
                    android:src="@drawable/cutmicrophone"
                    android:tint="#9E9E9E"
                    android:layout_centerHorizontal="true"
                    android:scaleType="centerCrop"/>


                <TextView
                    android:id="@+id/text_soundoff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mute"
                    android:layout_centerHorizontal="true"
                    android:textColor="#9E9E9E"
                    android:text="без звука"
                    android:textSize="12dp" />
            </RelativeLayout>









            <at.markushi.ui.CircleButton
                android:layout_marginTop="50dp"
                  android:layout_column="1"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_gravity="center"

                android:id="@+id/button_call"
                app:cb_color="#F44336"
                android:src="@drawable/ic_call_end_white_24dp"

                app:cb_pressedRingWidth="8dip" />



        </GridLayout>


    </LinearLayout>


